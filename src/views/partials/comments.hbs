{{#if sidebar.comments}}
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="m-0"><i class="fas fa-comments"></i> Ãšltimos comentarios</h5>
        </div>
        <div class="card-body p-2">
            <div style="overflow: hidden">
                {{#each sidebar.comments}}
                    <div class="row d-flex align-items-center m-0 p-1">
                        <div class="col-5 p-0">
                            <a href="/images/{{image._id}}">
                                <img src="/public/upload/{{image._id}}{{image.ext}}" alt="" class="w-100">
                            </a>
                        </div>
                        <div class="col-7">
                            <blockquote class="w-100 m-0">
                                <p class="my-1">{{comment}}</p>
                                <footer class="blockquote-footer m-0">
                                    <span>{{name}}, {{timeAgo timestamp}}</span>
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/if}}