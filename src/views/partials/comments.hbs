{{#if sidebar.comments}}
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5><i class="fas fa-comments"></i> Ãšltimos comentarios</h5>
        </div>
        <div class="card-body">
            {{#each sidebar.comments}}
                <div class="row">
                    <div class="col">
                        <a href="/images/{{image._id}}">
                            <img src="/public/upload/{{image._id}}{{image.ext}}" alt="" class="w-70 img-thumbnail">
                        </a>
                    </div>
                    <div class="col">
                        <blockquote class="w-100">
                            <p>{{comment}}</p>
                            <footer class="blockquote-footer">
                                <span>{{name}}</span>
                                <span>{{timeAgo timestamp}}</span>
                            </footer>
                        </blockquote>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}