<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fas fa-trash-alt"></i> Eliminar
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{image.filename}}" alt="" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.uniqueId}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p class="fw-bold m-0">
            <i class="fas fa-heart"></i> {{image.likes}}
        </p>
        <p class="fw-bold m-0">
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p class="fw-bold m-0">
            <i class="far fa-clock"></i> {{timeAgo image.timestamp}}
        </p>
    </div>
</div>