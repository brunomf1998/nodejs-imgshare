<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image._id}}">
            <i class="fas fa-trash-alt"></i> Eliminar
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{image._id}}{{image.ext}}" alt="" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image._id}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p class="fw-bold m-0 likes-count">
            <i class="fas fa-heart"></i> {{image.likes}}
        </p>
        <p class="fw-bold m-0">
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p class="fw-bold m-0">
            <i class="far fa-clock"></i> {{timeAgo image.timestamp}}
        </p>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment" style="display: none">
            <form action="/images/{{image._id}}/comment" method="POST">
                <div class="mb-3">
                    <input type="text" class="form-control" name="name" placeholder="Nombre">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="email" placeholder="Correo electrÃ³nico">
                </div>
                <div class="mb-3">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Tu comentario"></textarea>
                </div>
                <button class="btn btn-success" id="btn-comment">
                    <i class="fas fa-comment"></i> Publicar
                </button>
            </form>
        </blockquote>

        <div class="container">
            {{#each comments}}
                <div class="row mb-3">
                    <div class="col-2 col-lg-1 d-flex justify-content-center align-items-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="" class="rounded-circle ">
                    </div>    
                    <div class="col-10 col-lg-11">
                        <div class="card p-3 bg-light" style="border-radius: 20px">
                            <p class="fw-bold m-0">{{name}}</p>
                            <p class="m-0">{{comment}}</p>
                            <span class="text-end fst-italic">{{timeAgo timestamp}}</span>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

