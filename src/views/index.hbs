<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i>
            Subir una imagen
        </h3>
    </div>

    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group mb-3">
                    <input type="file" name="image" class="form-control" id="inputGroupFile">
                </div>
            </div>
            <div class="form-group mb-3">
                <input type="text" name="title" class="form-control" placeholder="Título para la imagen" required>
            </div>
            <div class="form-group mb-3">
                <textarea name="description" class="form-control" rows="2" placeholder="Descripción para la imagen" required></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Subir imagen
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Recién subidas</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
                <div class="col-md-4">
                    <a href="/images/{{_id}}">
                        <img src="/public/upload/{{_id}}{{ext}}" alt="" class="w-100 h-100 img-thumbnail">
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>